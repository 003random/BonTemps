<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="description" content="Miminium Admin Template v.1">
    <meta name="author" content="Isna Nur Azis">
    <meta name="keyword" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bon Temps Intranet</title>

    @Styles.Render("~/Content/defaultcss")

    <!-- end: Css -->

    <link rel="shortcut icon" href="asset/img/logomi.png">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body id="mimin" class="dashboard">
    <!-- start: Header -->
    <nav class="navbar navbar-default header navbar-fixed-top">
        <div class="col-md-12 nav-wrapper">
            <div class="navbar-header" style="width:100%;">
                <a href="index.html" class="navbar-brand">

                    <b>Bon Temps</b>
                </a>

                <ul class="nav navbar-nav search-nav">
                    <li>
                        <div class="search" style="margin-left: 30%;">
                            <span onclick="window.location = '@Url.Action("Create", "Reservation")';" class="fa fa-book" style="margin-left: 20px; font-size:23px; cursor: pointer"></span>
                            <span onclick="window.location = '@Url.Action("Create", "Order")';" class="fa fa-coffee" style="margin-left: 20px; font-size:23px; cursor: pointer"></span>
                        </div>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right user-nav" style="position:fixed; right:40px;">
                    <li class="user-name"><span>Serveerster</span></li>
                    <li class="dropdown avatar-dropdown">
                        <img onclick="window.location = '@Url.Action("LogOut", "Account")';" src="http://www.pvhc.net/img162/kzkdpyqytlhncwjrpvzf.png" style="height: 30px; width: 30px; margin-top: 40%; cursor: pointer;" alt="" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- end: Header -->

    <div class="container-fluid mimin-wrapper">

        <!-- start:Left Menu -->
        <div id="left-menu">
            <div class="sub-left-menu scroll">
                <ul class="nav nav-list">
                    <li><div class="left-bg"></div></li>
                    <img src="http://i.imgur.com/lLy2RMj.png" width="150px" class="animated fadeInLeft" height="150px" alt="logo" style="margin-left: 35px; margin-bottom:5px; margin-top: -20px;">
                    <hr>
                    <li class="active ripple">
                        <a class="tree-toggle nav-header">Reserveren
                            <span class="fa-angle-right fa right-arrow text-right"></span>
                        </a>
                        <ul class="nav nav-list tree">
                            <li><a href="Reserveren.html">Aanmaken</a></li>
                            <li><a href="Overzicht.html">Overzicht</a></li>
                        </ul>
                    </li>
                    <li class="active ripple">
                        <a class="tree-toggle nav-header">Menu's
                            <span class="fa-angle-right fa right-arrow text-right"></span>
                        </a>
                        <ul class="nav nav-list tree">
                            <li><a href="@Url.Action("Create", "Menu")">Aanmaken</a></li>
                            <li><a href="@Url.Action("Index", "Menu")">Overzicht</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <!-- end: Left Menu -->
        <!-- start: content -->
        <div id="content">
            <br />
            @RenderBody()
        </div>
        <!-- end: content -->


    </div>

    <!-- start: Mobile -->
    <button id="mimin-mobile-menu-opener" class="animated rubberBand btn btn-circle btn-danger">
        <span class="fa fa-bars"></span>
    </button>
    <!-- end: Mobile -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/defaultscripts")
    @RenderSection("Scripts", false)

    <!-- alerts-->
    <script>
    @{
        if (TempData["error"] != null)
        {
            <text>alertify.error('@TempData["error"]');</text>
        }
        if (TempData["warning"] != null)
        {
            <text>alertify.warning('@TempData["warning"]');</text>
        }
        if (TempData["success"] != null)
        {
            <text>alertify.success('@TempData["success"]');</text>
        }
        if (TempData["message"] != null)
        {
            <text>alertify.message('@TempData["message"]');</text>
        }
       }
    </script>

    <!-- custom -->
    <script type="text/javascript">
        (function (jQuery) {

            $('.dateAnimate').bootstrapMaterialDatePicker({ weekStart: 0, time: false, animation: true });
            $('.date').bootstrapMaterialDatePicker({ weekStart: 0, time: false });
            $('.time').bootstrapMaterialDatePicker({ date: false, format: 'HH:mm', animation: true });
            $('.datetime').bootstrapMaterialDatePicker({ format: 'dddd DD MMMM YYYY - HH:mm', animation: true });
            $('.date-fr').bootstrapMaterialDatePicker({ format: 'DD/MM/YYYY HH:mm', lang: 'fr', weekStart: 1, cancelText: 'ANNULER' });
            $('.min-date').bootstrapMaterialDatePicker({ format: 'DD/MM/YYYY HH:mm', minDate: new Date() });


            // start: Maps============

            jQuery('.maps').vectorMap({
                map: 'world_en',
                backgroundColor: null,
                color: '#fff',
                hoverOpacity: 0.7,
                selectedColor: '#666666',
                enableZoom: true,
                showTooltip: true,
                values: sample_data,
                scaleColors: ['#C8EEFF', '#006491'],
                normalizeFunction: 'polynomial'
            });

            // end: Maps==============

        })(jQuery);
    </script>
    <!-- end: Javascript -->
</body>
</html>