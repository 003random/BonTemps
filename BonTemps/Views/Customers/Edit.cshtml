@model BonTemps.Models.Customers

@{
    ViewBag.Title = "Edit";
}
<div class="col-md-10">
    <div class="col-md-12 panel">
        <div class="col-md-12 panel-heading">
            <h3>Klantgegevens bewerken</h3>
        </div>
        <div class="col-md-12 panel-body" style="padding-bottom:30px;">
            <div class="col-md-12">
                @using (Html.BeginForm("Edit", "Customers", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "cmxform", role = "form" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="col-md-6">


                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-text", required = "" })
                            <span class="bar"></span>
                            @Html.LabelFor(m => m.FirstName)
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            @Html.TextBoxFor(m => m.Prefix, new { @class = "form-text" })
                            <span class="bar"></span>
                            @Html.LabelFor(m => m.Prefix)
                            @Html.ValidationMessageFor(m => m.Prefix, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-text", required = "" })
                            <span class="bar"></span>
                            @Html.LabelFor(m => m.LastName)
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-text", required = "", type = "text" })
                            <span class="bar"></span>
                            @Html.LabelFor(m => m.PhoneNumber)
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-text", required = "" })
                                <span class="bar"></span>
                                @Html.LabelFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                                @Html.LabelFor(model => model.NewsLetter, htmlAttributes: new { @class = "control-label col-md-2" })
                                <span class="bar"></span>
                                    @Html.EditorFor(model => model.NewsLetter)
                                    @Html.ValidationMessageFor(m => m.NewsLetter, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input class="submit btn btn-danger" type="submit" value="Oplsaan">
                        <button class="submit btn btn-primary" onclick="location.href='@Url.Action("Index", "Customers")';return false;">Annuleer</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


