@model BonTemps.Models.RolesUsersModelView

@{
    ViewBag.Title = "Edit";
}

<div class="col-md-10">
    <div class="col-md-12 panel">
        <div class="col-md-12 panel-heading">
            <h3>Roles bewerken</h3>
        </div>
        <div class="col-md-12 panel-body" style="padding-bottom:30px;">
            <div class="col-md-12">
                @using (Html.BeginForm("Edit", "Role_manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "cmxform", role = "form" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="col-md-6">

                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-text", required = "", disabled = "disabled" })
                            <span class="bar"></span>
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                            @Html.DropDownListFor(m => m.Role , new SelectList(ViewBag.roles, "Id", "Name"), new {value = Model.Role})   
                            <span class="bar"></span>
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.HiddenFor(u => u.UserId)

                    <div class="col-md-12">
                        <input class="submit btn btn-danger" type="submit" value="Opslaan">
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
