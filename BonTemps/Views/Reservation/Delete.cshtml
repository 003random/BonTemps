@model BonTemps.Models.Reservations

@{
    ViewBag.Title = "Reservering verwijderen";
}

<div class="col-md-10">
    <div class="col-md-12 panel">
        <div class="col-md-12 panel-heading">
            <h3>Reservering verwijderen</h3>
        </div>
        <div class="col-md-12 panel-body" style="padding-bottom:30px;">
            <div class="col-md-12">
                <table>
                    <tbody>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Customer.FirstName) @Html.DisplayNameFor(model => model.Customer.Prefix) @Html.DisplayNameFor(model => model.Customer.LastName)</th>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                            <th>@Html.DisplayNameFor(model => model.Persons)</th>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.Prefix) @Html.DisplayFor(model => model.Customer.LastName)</td>
                            <td>@Html.DisplayFor(model => model.Date)</td>
                            <td>@Html.DisplayFor(model => model.Persons)</td>
                        </tr>
                    </tbody>
                </table>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="submit btn btn-danger" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    tbody tr td {
        font-family: 'Open Sans', sans-serif;
        font-weight: 400;
        color: #5f6062;
        font-size: 13px;
        border-bottom: 1px solid #e0e0e0;
        border: 1px solid rgb(130, 126, 126) !important;
    }
</style>

@section Scripts {
    <script>
        $("tr").each(function (index, value) {
            $(this).children().eq(0).text($(this).children().eq(0).text() + ":");
            $(this).children().eq(1).css("background-color", "#f0f3f5");
        });
    </script>
}