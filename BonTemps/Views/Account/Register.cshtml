@using System.Globalization
@model BonTemps.Models.RegisterViewModel
@{
    ViewBag.Title = "Bon Temps log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    @Styles.Render("~/Content/defaultcss")
    <style type="text/css">
        .confirm {
            white-space: nowrap;
        }
    </style>
</head>
<body id="mimin" class="dashboard form-signin-wrapper">
    <div class="container">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-signin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="panel periodic-login">
                <div class="panel-body text-center">
                    <h1 class="atomic-symbol">BT</h1>
                    <p class="atomic-mass">@{ var date = Convert.ToString(DateTime.Now.Date, CultureInfo.InvariantCulture); } @date.Split(' ')[0]</p>
                    <p class="element-name">Bon Temps</p>

                    <i class="icons icon-arrow-down"></i>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-text", required = "" })
                        <span class="bar"></span>
                        @Html.LabelFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-text", required = "" })
                        <span class="bar"></span>
                        @Html.LabelFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group form-animate-text" style="margin-top: 40px !important;">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-text", required = "" })
                        <span class="bar"></span>
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <label class="pull-left">
                        <input required="" type="checkbox" class="icheck pull-left" name="checkbox1" />Ik ga akkoord met de <u id="tos">algemene voorwaarden</u>
                    </label>
                    <input type="submit" class="btn col-md-12" value="Account aanmaken" />
                </div>
                <div class="text-center" style="padding:5px;">
                    <!--@Html.ActionLink("Forgot password", "ForgotPassword", "Account")-->
                    @Html.ActionLink("Login", "Login", "Account")
                </div>
            </div>
                        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/defaultscripts")

    <script>
        $("#tos").on("click", function () {
            alertify.alert("¯\\_(ツ)_/¯", "Wow, iemand klikt hier op voor het eerst \\0/.");
        });
    </script>
</body>
</html>
