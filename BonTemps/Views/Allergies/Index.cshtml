@model IEnumerable<BonTemps.Models.Allergies>

@{
    ViewBag.Title = "Index";
}


<div class="col-md-12 padding-0">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading"><h3>Allergieën Overzicht</h3></div>
            <div class="panel-body">
                <div class="responsive-table">
                    <table id="datatable" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>Afbeeling</th>
                                <th>Opties</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td style="text-align: center;">
                                        <img src="~/Content/Uploads/allergy-images/@Html.DisplayFor(modelItem => item.Image)" onerror="this.src = 'https://vignette.wikia.nocookie.net/bokunoheroacademia/images/d/d5/NoPicAvailable.png/revision/latest?cb=20160326222204';" alt="menu image" width="50px" height="50px" />
                                    </td>
                                    <td>
                                        <span onclick="window.location = '@Url.Action("Details", "Allergies", new {id = item.Id})';" class="fa fa-info-circle" style="margin-left: 10px; font-size:20px; cursor: pointer"></span>
                                        <span onclick="window.location = '@Url.Action("Delete", "Allergies", new {id = item.Id})';" class="fa fa-times" style="margin-left: 10px; font-size:20px; cursor: pointer"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>
}